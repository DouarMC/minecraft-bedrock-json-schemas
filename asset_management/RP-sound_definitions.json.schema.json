{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["format_version", "sound_definitions"],
    "properties": {
        "format_version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
        "sound_definitions": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "__use_legacy_max_distance": {"type": "boolean"},
                    "category": {"type": "string", "enum": ["weather", "block", "bucket", "bottle", "ui", "player", "hostile", "music", "record", "neutral"]},
                    "max_distance": {"anyOf": [{"type": "number"}, {"type": "null"}]},
                    "min_distance": {"anyOf": [{"type": "number"}, {"type": "null"}]},
                    "sounds": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {"type": "string"},
                                "stream": {"type": "boolean"},
                                "volume": {"type": "number"},
                                "load_on_low_memory": {"type": "boolean"},
                                "pitch": {"type": "number"},
                                "is3D": {"type": "boolean"},
                                "interruptible": {"type": "boolean"},
                                "weight": {"type": "number"}
                            }
                        }
                    }
                }
            }
        }
    }
}